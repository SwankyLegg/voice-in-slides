{
  "manifest_version": 3,
  "name": "Slides Speech Synthesizer",
  "version": "0.1",
  "description": "Synthesizes speech for text between < and > in Google Slides",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://docs.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["https://docs.google.com/*"],
    "js": ["content.js"]
  }]
}